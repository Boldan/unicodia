     <text id="Name">
      <orig>Разделитель участков</orig>
     </text>
     <text id="Short">
      <orig>Разделитель участков</orig>
     </text>
     <text id="Text">
      <orig>Три управляющих символа: 09 (табуляция), 0B (вертикальная табуляция), 1F (разделитель 1).</orig>
     </text>
    </group>
